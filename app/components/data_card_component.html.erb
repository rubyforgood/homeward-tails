<div class="card mb-4">
  <div class="card-body">
    <div class="d-flex align-items-center justify-content-between mb-3 lh-1">
      <div>
        <span class="<%= title_size_class %> text-uppercase fw-semibold ls-md">
          <%= title %>
        </span>
      </div>
      <div>
        <% if icon_name? %>
          <span class="<%= feather_classes %> fs-3 <%= icon_color %>"></span>
        <% end %>
      </div>
    </div>
    <div>
      <%= value %>
    </div>
  </div>
</div>
