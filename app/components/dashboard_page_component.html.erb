<section class="container-fluid p-4">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-12">
      <div class="pb-3 d-lg-flex justify-content-between align-items-center">
        <div style="--bs-breadcrumb-divider: '>'" class="flex-column">
          <h2 class="section-heading text-capitalize">
            <%= header_title %>
          </h2>
          <% if header_subtitle? %>
            <p class="section-subheading text-muted mt-n2">
              <%= header_subtitle %>
            </p>
          <% end %>
          <%= breadcrumbs class: "breadcrumb", style: :ol,
            fragment_class: "breadcrumb-item"
          %>
        </div>
        <div class="d-flex">
          <%= action %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 border-bottom">
      <!-- Nav tabs -->
      <% if nav_tabs? %>
        <ul class="nav nav-lb-tab mt-n3 gap-1">
          <%# nav_tabs %>
          <% nav_tabs.each do |tab| %>
            <%= tab %>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class='mt-4'>
    <%= body %>
  </div>
</section>
