<!DOCTYPE html>
<html>
  <%= render "layouts/shared/head" %>

  <body>
    <%= render partial: "layouts/navbar" %>

    <main>
      <div>
        <% if flash[:notice] %>
          <div class="flash-notice bigger">
            <%= notice %>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="flash-alert bigger">
            <%= alert %>
          </div>
        <% end%>

        <div>
          <%= yield %>
        </div>
      </div>
    </main>

    <%= render partial: "layouts/footer" %>
  </body>
</html>
