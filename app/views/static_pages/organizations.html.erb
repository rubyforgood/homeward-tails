<section class="pt-5 pb-5 bg-light">

  <div class="container mb-md-5 mt-md-5">
    <h1 class="text-center fw-bold">Welcome to Homeward Tails</h1>
    <p class="lead text-center mt-3">
      One account. Endless tail wags. Discover pets, connect with
      organizations, and apply to adopt â€” all in one place.
    </p>
  </div>
</section>
<!-- Account Features -->
<section class="container my-5">
  <div class="row justify-content-center">
    <div class="col col-lg-6 text-center text-lg-start">
      <h3 class="mb-4">What You Can Do with Your Homeward Tails Account</h3>
      <ul class="list-group list-group-flush pe-lg-16">

        <li class="list-group-item">
          Sign up once, access many organizations</li>
        <li class="list-group-item">
          View, like, and apply to adopt pets</li>
        <li class="list-group-item">
          Join as many organizations as you like</li>
        <li class="list-group-item">
          Create a custom profile for each organization</li>
      </ul>
    </div>

    <div class="col-3 rounded shadow-lg d-none d-lg-block">
      <%= image_tag "adopter_dashboard.png", alt: "hero", class: "img-fluid" %>
    </div>
  </div>
</section>
<!-- Organization Cards -->
<section class="container my-5">
  <h1 class="mb-4 text-center">Explore Partner Organizations</h1>
  <div
    class="
      row justify-content-center row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4
      g-4
    "
  >
    <% @organizations.each do |org| %>
      <div class="col">
        <div class="card h-100 shadow-lg">

          <div class="d-flex justify-content-between p-2 card-header">
            <div class="d-flex flex-column">

              <h5 class="card-title fs-3"><%= org.name %></h5>
              <%# height: 40px; %>

              <h6 class="card-subtitle"><%= org.locations.last&.city_town %>,
                <%= org.locations.last&.province_state %>
                <%= org.locations.last&.country %></h6>
            </div>

            <% if org.avatar.attached? %>
              <%= image_tag(
                org.avatar,
                class: "rounded",
                style: "height:65px;aspect-ratio: 1 / 1;",
                alt: "#{org.name} logo",
              ) %>
            <% end %>
          </div>
          <div class="card-body">
            <h6 class="card-subtitle">About</h6>
            <p
              class="card-text flex-grow-1 overflow-hidden"
              style="height: 100px; text-overflow: ellipsis;"
            >
              Short text here.
            </p>
            <%= link_to "Visit & Explore", organization_home_path(org), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
