<!-- Masthead-->
<header class="masthead">
  <div class="container">
    <h1 class='mb-4'>
      We provide a platform for Pet Rescues and Animal Service Organizations
    </h1>
    <%= link_to "Browse #{Pet.all_unadopted_pets.count} Pets",
                adoptable_pets_path,
                class:'custom-btn-pink' %>
  </div>
</header>

<!-- ABOUT US-->
<section class="bg-light pt-5 pb-5" id="about_us">
  <div class="container mb-md-5 mt-md-5">

    <!--section heading-->
    <div class="text-center mb-5">
      <h2 class="section-heading text-uppercase underline">
        About us
      </h2>
    </div>

    <div class="row pb-3">
      <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
            <span>
                <%= image_tag('danielle_2.jpg',
                              class: 'rounded-5 w-100 px-4 px-lg-0') %>
            </span>
      </div>
      <div class="col-lg-4 px-4 order-last order-lg-0">
        <p class='justify bigger'>
          Pet Rescues are awesome
          </p>
        <br>
        <p class='justify bigger'>
          In the last year Pet Rescues saved 45,000 pets
        </p>
        <p class='text-center'>
          <%= link_to 'Read More', about_us_path,
                      class: 'custom-btn-green mt-5 mb-3' %>
        </p>
      </div>
      <div class="col-lg-4 col-md-6 d-none d-md-block mb-4 mb-lg-0">
            <span>
                <%= image_tag('danielle_3.jpg',
                              class: 'w-100 rounded-5 px-4 px-lg-0') %>
            </span>
      </div>
    </div> <!--row-->
  </div> <!--container-->
</section>

<!--PAGE HIGHLIGHTS-->
<section class="pt-5 pb-5" id="how_to_apply">
  <div class="container mb-md-5 mt-md-5">
    <div class="row text-center">
      <div class="col-md-4 p-3">
        <h3 class="mb-4">
          Process
        </h3>
        <p class='mb-4 bigger'>
          Before applying to adopt a pet it is important you read and understand how our process works.
        </p>
        <p>
          <%= link_to 'Learn more', faq_path, class: 'custom-btn-green' %>
        </p>
      </div>
      <div class="col-md-4 p-3">
        <h3 class="mb-4">
          Partners
        </h3>
        <p class='mb-4 bigger'>
          We have some amazing partners here in La Ventana who help in our pet rescue efforts.
        </p>
        <p>
          <%= link_to 'Learn more', partners_path, class: 'custom-btn-green' %>
        </p>
      </div>
      <div class="col-md-4 p-3">
        <h3 class="mb-4">
          Donate
        </h3>
        <p class='mb-4 bigger'>
          Donations help us to rescue, treat and adopt more pets. Click here to learn how you can donate.
        </p>
        <p>
          <%= link_to 'Learn more', donate_path, class: 'custom-btn-green' %>
        </p>
      </div>
    </div> <!--row-->
  </div> <!--container-->
</section>

<% unless user_signed_in? %>
  <!-- CTA -->
  <section class="pt-5 pb-5 bg-light" id="cta">
    <div class="container mb-md-5 mt-md-5">
      <div class="row text-center">
        <div class="col-8 offset-2 border p-5 shadow-sm
                    rounded bg-white">
          <h3 class='mb-4'>Become an adopter now!</h3>
          <%= link_to 'Adopt', new_user_registration_path,
                      class: 'custom-btn-pink' %>
        </div>
      </div>
    </div> <!--container-->
  </section>
<% end %>