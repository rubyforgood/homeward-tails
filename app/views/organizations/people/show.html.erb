<%= render DashboardPageComponent.new(crumb: :person, crumb_options: @person) do |c| %>
  <% c.with_header_title { t(:people) } %>
  <% c.with_body do %>

    <%= render TabsComponent.new(
      tabs: {
        details: {
          label: t(".details"),
          partial: "details",
          locals: {
            person: @person,
          },
          active: true,
        },
        form_submissions: {
          id: "form_submissions",
          label: t(".form_submissions"),
          src: staff_person_form_submissions_path(@person),
        },
      },
    ) %>
  <% end %>
<% end %>
