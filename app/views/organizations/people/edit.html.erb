<div class="row">
  <div class="col-md-8 mx-auto card p-5 bigger">
    <%= bootstrap_form_with model: @person do |form| %>
      <div class='form-group'>
        <%= form.text_field :first_name, value: @person.first_name, class: "form-control" %>
      </div>

      <div class='form-group'>
        <%= form.text_field :last_name, value: @person.last_name, class: "form-control" %>
      </div>

      <div class='form-group'>
        <%= render "inline_fields", form: form, attribute: :phone_number do %>
          <%= form.telephone_field :phone_number,
                               value: @person.phone_number,
                               hide_label: true,
                               class: "form-control" %>
        <% end %>
      </div>
      <%= form.fields_for :location do |location_form| %>
        <%= location_form.text_field :city_town,
                                 value: @person.location.city_town,
                                 class: "form-control" %>
      <% end %>
      <%= render "inline_fields", form: form, attribute: :city_town do %>

        <%= form.fields_for :location do |location_form| %>
          <%= location_form.text_field :city_town,
                                   value: @person.location.city_town,
                                   class: "form-control" %>
        <% end %>
      <% end %>

      <%= form.submit t("general.save"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
