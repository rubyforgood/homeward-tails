<div class="col-md-12 col-xl-8 col-12">
  <div class="row">
    <div class="col-12 mb-4">
      <div class="card">
        <div class="card-header">
          <!-- ... (rest of the card header) ... -->
        </div>
        <div class="card-body">
          
          <!-- Comment/Remove this if your main view already contains the "Tasks" title -->
          <%# <h5>Tasks</h5> %>
          
          <!-- This turbo-frame encapsulates the actual list of tasks -->
          <turbo-frame id="tasks_list">
            <ul class="list-group list-group-flush">
              <% @pet.tasks.each do |task| %> <!-- Ensure @pet is the correct context -->
                <li class="list-group-item px-0">
                  <div class="d-flex justify-content-between align-items-start">
                    
                    <!-- Left side: Task details -->
                    <div>
                      <strong class="d-block mb-1"><%= task.name %></strong>
                      <p><%= task.description %></p>
                    </div>
                    
                    <!-- Right side: Completion status and action buttons -->
                    <div class="text-right">
                      <div class="d-flex align-items-center justify-content-end">
                        <strong class="mr-3"><%= task.completed %></strong>
                        <!-- Trigger Edit Modal -->
                        <button type="button" class="btn btn-warning mr-4" data-bs-toggle="modal" data-bs-target="#editTaskModal_<%= task.id %>">
                          Edit
                        </button>
                        <!-- Delete Task Link -->
                        <%= link_to 'Delete', pet_task_path(@pet, task), class: 'btn btn-danger', data: { turbo_method: "delete", turbo_confirm: 'Are you sure?' } %>
                      </div>
                    </div>

                    <!-- Modal for Editing Task -->
                    <div class="modal" tabindex="-1" id="editTaskModal_<%= task.id %>">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title">Edit Task</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <!-- Turbo Frame for Dynamic Loading of Edit Form -->
                            <turbo-frame id="edit_task_frame_<%= task.id %>" src="<%= edit_pet_task_path(@pet, task) %>">
                            </turbo-frame>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          </div>
                        </div>
                      </div>
                    </div>
                </li>
              <% end %>
            </ul>
          </turbo-frame>

          <!-- Modal for Adding New Task -->
          <div class="modal" tabindex="-1" id="newTaskModal">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <%# <h5 class="modal-title">Add New Task</h5> %>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <!-- Form for Adding a New Task -->
                  <%= form_for [@pet, Task.new], remote: true do |f| %>
                    <div class="mb-3">
                      <%= f.label :name, "Task Name" %>
                      <%= f.text_field :name, class: 'form-control' %>
                    </div>
                    <div class="mb-3">
                      <%= f.label :description, "Task Description" %>
                      <%= f.text_area :description, class: 'form-control', rows: 3 %>
                    </div>

                    <div class="mb-3">
                      <%= f.label :completed, "Task Completed?" %>
                      <%= f.check_box :completed %>
                    </div>
                    <div class="mb-3">
                      <%= f.submit "Add Task", class: 'btn btn-primary' %>
                    </div>
                  <% end %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>

          <!-- Trigger New Task Modal -->
          <button type="button" class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#newTaskModal">
            Add New Task
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
