<%= bootstrap_form_with model: task, url: url do |f| %>
  <div class="m-3">
    <div class='row'>
      <div class='col-9'>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class='col-3'>
        <%= f.date_field :due_date, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="m-3">
    <%= f.text_area :description, class: 'form-control', rows: 3 %>
  </div>
  <div class="m-3">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
