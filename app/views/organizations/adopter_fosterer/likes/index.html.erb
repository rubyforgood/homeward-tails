<%= render DashboardPageComponent.new do |c| %> <%# Here erin%>
  <% c.with_header_title { t('organizations.adopter_fosterer.likes.index.liked_pets') } %>
  <% c.with_body do %>
    <div class="justify-content-md-between mb-4 mb-xl-0 gx-3">
      <div class="row">
          <% @pets.each do |pet| %>
          <div class="col-lg-4 col-md-6 p-0">
            <%= render AvatarComponent.new(pet: pet, like: @like, size: :xl) %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

