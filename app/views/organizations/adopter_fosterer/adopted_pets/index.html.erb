<%= render DashboardPageComponent.new do |c| %>
  <% c.with_header_title { "Adopted Pets" } %>
  <% c.with_body do %>
    <div class="container-fluid px-4">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        <% @adopted_pets.each_with_index do |pet, index| %>
          <div class="col">
            <div class="card h-100 bg-white %> border-0 shadow-sm">
              <div class="card-body d-flex align-items-center">
                <div class="rounded-circle overflow-hidden me-3 flex-shrink-0" style="width: 50px; height: 50px;">
                  <%= link_to image_tag( 'coming_soon.jpg'), class: "w-100 h-100 object-fit-cover" %>
                </div>
                <h5 class="card-title mb-0"><%= pet.name %></h5>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
     
    </div>
  <% end %>
<% end %>