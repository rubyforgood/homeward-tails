<div class="col-xl-3 col-lg-6 col-md-6 col-12 p-2">
  <!-- Card -->
  <div class="card mb-4">
    <!-- Card body -->
    <div class="card-body">
      <div class="text-center">
        <div class="position-relative">
          <%= render AvatarComponent.new(fosterer, size: :xl) %>
          <a href="#" class="position-absolute mt-10 ms-n5">
            <span class="status bg-success"></span>
          </a>
        </div>
        <h4 class="mb-0"><%= "#{fosterer.full_name}" %></h4>
      </div>
      <div class="d-flex justify-content-between border-bottom py-2">
        <span><%= t(:phone) %></span>
        <span><%= fosterer.phone_number %></span>
      </div>
      <div class="d-flex justify-content-between border-bottom py-2">
        <span><%= t(:email) %></span>
        <span><%= fosterer.email %></span>
      </div>
      <div
        class="d-flex justify-content-between border-bottom py-2"
        id="<%= dom_id(fosterer, :notes) %>"
      >
        <span><%= t(:notes) %></span>
        <%= render "organizations/staff/shared/notes",
        notable: fosterer,
        modal_id: "card",
        context: "fosterers" %>
      </div>
      <div class="text-end mt-3">
        <%= link_to t("general.edit"),
        edit_staff_fosterer_path(fosterer),
        class: "btn btn-warning" %>
      </div>
      <div class="d-flex justify-content-between pt-2">
        <span><%= t(:deactivate) %></span>
        <%= render "organizations/staff/shared/deactivate_toggle",
        person: fosterer,
        person_group: fosterer.person_groups.find_by(group_id: @group_id) %>
      </div>
    </div>
  </div>
</div>
