<% if @pg %>
  <%= turbo_stream.replace_all ".user_deactivate_toggle_#{@person.id}",
                           partial:
                             "organizations/staff/shared/deactivate_toggle",
                           locals: {
                             person: @person,
                             person_group: @pg.reload,
                           } %>
<% else %>
  <% pg = @person.person_groups.find_by(group_id: @person.staff_current_group.id) %>

  <%= turbo_stream.replace_all ".#{dom_id(@person, :group)}",
                           partial: "organizations/staff/staff/group",
                           locals: {
                             person: @person,
                           } %>

  <%= turbo_stream.replace_all ".user_deactivate_toggle_#{@person.id}",
                           partial:
                             "organizations/staff/shared/deactivate_toggle",
                           locals: {
                             person: @person,
                             person_group: pg,
                           } %>
<% end %>
<%= turbo_stream.replace "flash", partial: "layouts/shared/flash_messages" %>
