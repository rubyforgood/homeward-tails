<div id=<%= "staff_deactivate_toggle_#{staff.id}" %>>
  <%= form_with model: staff, url: staff_update_activation_path(staff), method: "post" do |form| %>
    <div class='form-group d-flex justify-content-center'>
      <div class="form-check form-switch">
        <%= form.check_box :deactivated?,{ class: "form-check-input",
        role: "switch", id: "flexSwitchCheckChecked", onchange: "this.form.requestSubmit()"}, true, false %>
      </div>
    </div>
  <% end %>
</div>