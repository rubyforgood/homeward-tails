<% pg =
  @person.person_groups.find_sole_by(group_id: @person.current_staff_group.id) %>

<%= turbo_stream.replace_all ".#{dom_id(@person, :role)}",
                         partial: "organizations/staff/staff/role",
                         locals: {
                           staff: @person,
                         } %>

<%= turbo_stream.replace_all ".user_deactivate_toggle_#{@person.id}",
                         partial:
                           "organizations/staff/shared/deactivate_toggle",
                         locals: {
                           person: @person,
                           person_group: pg,
                         } %>

<%= turbo_stream.replace "flash", partial: "layouts/shared/flash_messages" %>
