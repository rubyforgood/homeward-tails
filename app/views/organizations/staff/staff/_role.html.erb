<% current_group = person.staff_current_group %>
<div class="dropdown <%= dom_id(person, :role)%>">
  <button
    class="
      btn btn-outline-secondary dropdown-toggle <%= "disabled" if person == Current.person%>
    "
    type="button"
    id="dropdownMenuButton"
    data-bs-toggle="dropdown"
    aria-haspopup="true"
    aria-expanded="false"
  >
    <%= current_group.name.titleize %>
  </button>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <% if current_group.super_admin? %>
      <%= button_to "Admin",
      staff_person_group_management_path(
        person,
        action_type: "group_change",
        group: :admin,
      ),
      method: :patch,
      class: "dropdown-item" %>
    <% end %>
    <% if current_group.admin? %>
      <%= button_to "Super Admin",
      staff_person_group_management_path(
        person,
        action_type: "group_change",
        group: :super_admin,
      ),
      method: :patch,
      class: "dropdown-item" %>
    <% end %>
  </div>
</div>
