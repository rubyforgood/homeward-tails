<div class="row pt-3" id="<%= dom_id(foster) %>">
  <!-- fosterer -->
  <div class="align-middle col">
    <%= link_to foster.fosterer_name(:last_first),
                staff_profile_review_path(foster.adopter_foster_profile),
                class: "link-underline link-underline-opacity-0" %>
  </div>
  <!-- status -->
  <div class="align-middle col text-nowrap" style="min-width: 220px;">
    <div class="badge <%= status_classes(foster.status) %>">
      <%= foster.status.to_s.titleize %>
    </div>
  </div>
  <!-- start date -->
  <div class="align-middle text-center col">
    <%= turbo_frame_tag dom_id(foster, :start_date) do %>
      <%= link_to foster.start_date.strftime("%m/%d/%Y"),
                  edit_staff_manage_foster_path(foster),
                  class: "btn btn-outline-primary mb-2" %>
    <% end %>
  </div>
  <!-- end date -->
  <div class="align-middle text-center col">
    <%= turbo_frame_tag dom_id(foster, :end_date) do %>
      <%= link_to foster.end_date.strftime("%m/%d/%Y"),
                  edit_staff_manage_foster_path(foster),
                  class: "btn btn-outline-primary mb-2" %>
    <% end %>
  </div>
  <!-- delete -->
  <div class="align-middle col">
    <%= button_to "Delete", staff_manage_foster_path(foster),
                  method: :delete,
                  class: "btn btn-outline-danger",
                  data: {
                    turbo_confirm: "Click OK to delete this foster."
                  } %>
  </div>
</div>
