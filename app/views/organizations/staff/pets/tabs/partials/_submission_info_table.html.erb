<div class="row pt-3" id="<%= dom_id(sub, :table) %>">
  <!-- applicant -->
  <div class="align-middle col">
    <%= link_to sub.applicant_name, staff_profile_review_path(sub.adopter_foster_account.adopter_foster_profile),
                                class: "link-underline link-underline-opacity-0"  %>
  </div>
  <!-- status -->
  <div class="align-middle col text-nowrap" style="min-width: 220px;">
    <%= render 'organizations/staff/pets/tabs/partials/submission_status', sub: sub %>
  </div>
  <!-- create -->
  <div class="align-middle text-center col">
    <%= render 'organizations/staff/pets/tabs/partials/submission_create_button', sub: sub %>
  </div>
  <!-- notes -->
  <div class="align-middle col text-nowrap">
    <%= render 'organizations/staff/pets/tabs/partials/submission_notes', sub: sub, modal_id: 'table' %>
  </div>
</div>
