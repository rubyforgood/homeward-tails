
  
  
  <div class="col-md-12 col-xl-8 col-12">
    <div class="card">
      <div class="card-header">
        <h4 class="mb-0" id="taskModalTitle"><%= task.new_record? ? "Add New Task" : "Edit Task" %></h4>
      </div>
      <div class="card-body">
        <%= form_with(model: [@pet, task], local: true) do |f| %>
          <input type="hidden" id="taskModalActionType" value="<%= task.new_record? ? 'new' : 'edit' %>">
          <div class="mb-3">
            <%= f.label :name, 'Title!!!!', class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= f.label :description, 'Description', class: 'form-label' %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          
          <!-- 3. Updated the submit button's text to be dynamic -->
          <%= f.submit (task.new_record? ? "Create Task" : "Edit Task"), id: "taskModalSubmitButton", class: 'btn btn-primary' %>

        <% end %>
      </div>
    </div>
  </div>

