<section class="pt-5 pb-5">
  <div class="container mb-md-5 mt-md-5">
    <div class="text-center mb-5">
      <h1 class="section-heading underline">
        <%= t('.header') %>
      </h1>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3 text-center bigger mx-auto">
        <%= t('.description') %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mx-auto card p-5" data-controller="country-state">
        <%= bootstrap_form_with model: OrganizationAccountRequest.new, url: organization_account_request_path do |form| %>
          <% if @organization_account_request.errors.any? %>
            <div class="alert alert-danger mt-1" role="alert">
              <%= t('organizations.staff.organizations.form.please_fix_the_errors') %>
            </div>
            <ul>
              <% @organization_account_request.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <div class="card-body pt-0">
            <div class="row mt-3">
              <div class="col-lg-6">
                <div class="form-group">
                  <%= form.text_field :name,
                                      label: t('.form.organization_name'),
                                      class: 'form-control',
                                      required: true
                  %>
                </div>

                <div class="form-group">
                  <%= form.text_field :requester_name,
                                      label: t('.form.your_name'),
                                      class: 'form-control'
                  %>
                </div>

                <div class="form-group">
                  <%= form.telephone_field :phone_number,
                                           autofocus: true,
                                           label: t('phone'),
                                           placeholder: "10 digit number",
                                           class: 'form-control',
                                           required: true
                  %>
                </div>

                <div class="form-group">
                  <%= form.email_field :email,
                                       label: t('email'),
                                       placeholder: "john@email.com",
                                       class: 'form-control',
                                       required: true
                  %>
                </div>
              </div>

              <div class="col-lg-6">
                <div class="input-group">
                  <%= render 'shared/country_province_state_city', form: form %>
                </div>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-lg-12">
                <%= form.submit t('general.submit'), class: 'btn btn-primary' %>
                <%= link_to t('general.cancel'), :back, class: 'btn btn-outline-secondary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
